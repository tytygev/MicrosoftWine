<Button x:Class="MicrosoftWine.ButtonClassicWin95"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:MicrosoftWine"
						 
		RenderTransformOrigin="0.5,0.5" 
		Padding="0,0,0,0" 
		MinWidth="79" MinHeight="29" 
		VerticalAlignment="Center" 
		HorizontalAlignment="Center" 
		HorizontalContentAlignment="Stretch" 
		VerticalContentAlignment="Stretch" 
		Background="{x:Null}" 
		BorderBrush="{x:Null}" 
		BorderThickness="0,0,0,0" 
	   
		
		>
	<Button.RenderTransform>
		<TransformGroup>
			<ScaleTransform/>
			<SkewTransform/>
			<RotateTransform />
			<TranslateTransform/>
		</TransformGroup>
	</Button.RenderTransform>

	<Button.Style>
		<Style TargetType="Button" >
			<Setter Property="LayoutTransform">
				<Setter.Value>
					<RotateTransform Angle="0" />
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsPressed" Value="True">
					<Setter Property="LayoutTransform">
						<Setter.Value>
							<RotateTransform Angle="180" />
						</Setter.Value>
					</Setter>
				</Trigger>
				<Trigger Property="IsMouseOver" Value="True">
				</Trigger>
			</Style.Triggers>
		</Style>
	</Button.Style>
	

	<Grid x:Name="Button" Background="Black">
		<Grid Background="White" Margin="0,0,1,1">
			<Grid Background="Gray" Margin="1,1,0,0">
				<Grid Background="#FFDFDFDF" Margin="0,0,1,1">
					<Grid Background="Silver" Margin="1,1,0,0">
						<Label x:Name="ButtonText" Content="Отмена" 
							   Padding="0,0,0,0"
					HorizontalContentAlignment="Center" 
							   FontFamily="Ari-W9500" 
							   RenderTransformOrigin="0.5,0.5" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                            <!--Margin="3,-3,3,0" -->
                            <Label.RenderTransform>
								<TransformGroup>
									<ScaleTransform/>
									<SkewTransform/>
									<RotateTransform />
									<TranslateTransform/>
								</TransformGroup>
							</Label.RenderTransform>
							<Label.Style>
								<Style TargetType="Label" >
									<Setter Property="LayoutTransform">
										<Setter.Value>
											<RotateTransform Angle="0" />
										</Setter.Value>
									</Setter>
									<Setter Property="Margin" Value="3,-3,3,0"/>
                                    <Setter Property="Margin">
                                        <Setter.Value>
                                            <Thickness Left="3" 
														Top="-3" 
													Right="3" 
													Bottom="0"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
										<DataTrigger Binding="{Binding Path=IsPressed, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Button}}" Value="true">
											<Setter Property="LayoutTransform">
												<Setter.Value>
													<RotateTransform Angle="180" />
												</Setter.Value>
											</Setter>
                                            <Setter Property="Margin">
                                                <Setter.Value>
                                                    <Thickness Left="3" 
                                                               Top="1" 
                                                               Right="3" 
                                                               Bottom="0"/>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>                                                                              
										<Trigger Property="IsMouseOver" Value="True">

										</Trigger>
									</Style.Triggers>
								</Style>
							</Label.Style>
						</Label>
					</Grid>
				</Grid>
			</Grid>
		</Grid>
	</Grid>
</Button>
