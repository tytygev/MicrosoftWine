<Button x:Class="MicrosoftWine.ButtonCloseWin95"		
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:MicrosoftWine" 
        
        RenderTransformOrigin="0.5,0.5" 
        Padding="0,0,0,0" Margin="2,2,2,2" 
        Width="16" 
        Height="14" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center"         
        Background="{x:Null}" 
        BorderBrush="{x:Null}" 
        BorderThickness="0,0,0,0" 
        Click="CloseApp" 
		>
	
	<Button.RenderTransform>
		<TransformGroup>
			<ScaleTransform/>
			<SkewTransform/>
			<RotateTransform />
			<TranslateTransform/>
		</TransformGroup>
	</Button.RenderTransform>


	<Button.Style>
		<Style TargetType="Button" >
            <Setter Property="LayoutTransform">
                <Setter.Value>
                    <RotateTransform Angle="0" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
				<Trigger Property="IsPressed" Value="True">

                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <RotateTransform Angle="180" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
				<Trigger Property="IsMouseOver" Value="True">

                    
                </Trigger>
			</Style.Triggers>
		</Style>

	</Button.Style>



   

	<Grid Width="16" Height="14" HorizontalAlignment="Right" Background="Black" MinWidth="16" MaxWidth="16" MinHeight="14" MaxHeight="14" RenderTransformOrigin="0.5,0.5">
		<Grid Background="White" Margin="0,0,1,1">
			<Grid Background="Gray" Margin="1,1,0,0">
				<Grid Background="#FFDFDFDF" Margin="0,0,1,1">
					<Grid Background="Silver" Margin="1,1,0,0">
						<Canvas Margin="2,1,2,2" Width="8" Height="7" ClipToBounds="True">
							<Line X1="0" Y1="0" X2="8" Y2="7" Stroke="#FF000000" ClipToBounds="True" />
							<Line X1="0" Y1="7" X2="8" Stroke="#FF000000" ClipToBounds="True" />
						</Canvas>
					</Grid>
				</Grid>
			</Grid>
		</Grid>
	</Grid>

</Button>
