<Window x:Class="MicrosoftWine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicrosoftWine"
        mc:Ignorable="d"
        Title="Microsoft Wine" Height="162" Width="381" ResizeMode="NoResize" ScrollViewer.VerticalScrollBarVisibility="Disabled" Grid.IsSharedSizeScope="True" Icon="/wine1.png" WindowStyle="None" BorderBrush="Black" BorderThickness="0,0,1,1" Background="#FFDFDFDF" UseLayoutRounding="False" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Padding="3,0,0,0">
    <Window.Resources>
        <FontFamily x:Key="Ari95">Ari-W9500 Regular</FontFamily>
        <FontFamily x:Key="Ari95B">Ari-W9500 Bold</FontFamily>
        <Style x:Key="{x:Type Rectangle}" TargetType="{x:Type Rectangle}">
            <Setter Property="Margin" Value="1,1,1,1"/>
            <Setter Property="Fill" Value="Navy"/>
        </Style>
        <Style x:Key="{x:Type local:ButtonClassicWin95}" 
               TargetType="{x:Type local:ButtonClassicWin95}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <!--<Setter Property="VerticalContentAlignment" Value="Stretch"/>
            --><Setter Property="Margin" Value="3,3,3,3"/>
            <Setter Property="MinWidth" Value="73"/>
            <Setter Property="MinHeight" Value="23"/>
            <Setter Property="MaxWidth" Value="73"/>
            <Setter Property="MaxHeight" Value="23"/>
        </Style>
       
    </Window.Resources>
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo/>
    </Window.TaskbarItemInfo>
    <Window.Effect>
        <DropShadowEffect BlurRadius="0" Opacity="0.5" RenderingBias="Performance" ShadowDepth="5" Direction="315"/>
    </Window.Effect>
    <Grid ClipToBounds="True" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="Gray" Margin="1,1,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Margin="0,0,1,1" Background="White">
            <Grid x:Name="BodyWindow" Margin="1,1,0,0" Background="Silver">
                <StackPanel>
                    <Grid x:Name="TitleBar" 
                          Height="18" 
                          Background="Navy" 
                          Width="375" 
                          Margin="0,1,0,0" MouseLeftButtonDown="MoveWindow"                          >
                        <Label Content="Microsoft Wine" Foreground="White" FontFamily="{DynamicResource Ari95B}" Padding="0,0,0,0" Margin="2,1,2,2" VerticalAlignment="Top" FontWeight="Bold" HorizontalAlignment="Left" FontSize="11"/>
                        <local:ButtonCloseWin95 Width="16" Height="14" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2,2,2,2" RenderTransformOrigin="0.5,0.5"/>
                    </Grid>
                    <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="10,3,10,10" Height="127" VerticalAlignment="Top">
                        <StackPanel Height="120">
                            <Image Source="/3g.gif" HorizontalAlignment="Left" VerticalAlignment="Top" Height="60" Margin="3,0,3,0" Width="273"/>
                            <TextBlock x:Name="Text" TextWrapping="Wrap" Margin="3,3,3,3" ScrollViewer.VerticalScrollBarVisibility="Disabled" Text="Line1
                                                         
                                       
                                   Line2 " FontSize="11" FontFamily="Ari-W9500" FontWeight="Regular" />
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                                <Grid x:Name="ProgressBar" Width="272" Height="13" Background="White" Margin="3,3,3,3" VerticalAlignment="Top">
                                    <Grid Background="Gray" Margin="0,0,1,1">
                                        <WrapPanel x:Name="ProgressBarWrapPan" Background="Silver" Margin="1,1,0,0" ItemHeight="11" ItemWidth="8">
                                            <Rectangle />
                                        </WrapPanel>
                                    </Grid>
                                </Grid>
                                <WrapPanel x:Name="ButtonPanel" ItemHeight="29" ItemWidth="79" HorizontalAlignment="Right">
                                    <local:ButtonClassicWin95 Click="AddButt" />
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
